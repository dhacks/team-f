<%- model_class = Food -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= link_to food.id, food_path(food) %></td>
        <td><%= link_to food.title, user_path(food.user_id) %></td>
        <td><%= food.content %></td>
        <td><%= food.place %></td>
        <td><%= food.date %></td>
        <td><%= food.cost %></td>
        <td><%= image_tag(food.image.url(:thumb)) %></td>
        <td><%= food.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_food_path(food), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      food_path(food),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
        <td>
          <button type ="button" data-toggle="modal" data-target="#requestModal<%= food.user_id %>">
          Send request
          </button>
      </tr>
      <!-- requestModal -->
      <div class="modal fade" id="requestModal<%= food.user_id %>" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= food.user_id %>
              <button type="button">
              <%= link_to "Send request!", requests_path(:seller_id => food.user), method: :post %>
              </button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>



