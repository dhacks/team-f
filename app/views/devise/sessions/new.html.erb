<h2>Log in</h2>


<div align="center">
<%= image_tag "doshisha.png", :width => "200px", :height => "200px" %>
</div>
<div class="container" style="margin-top: 50px; width: 700px" align="center">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, :placeholder => "メールアドレス" %>
    <%= f.input :password, required: false, :placeholder => "パスワード" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>


  <div class="form-actions waves-effect waves-block">
    <%= f.button :submit, "Log in", :class => "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
</div>


